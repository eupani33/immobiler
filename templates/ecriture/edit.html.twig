{% extends 'base.html.twig' %}

{% block title "Edition"%}

{% block body %}
	<div class="container mt-5">

		{{form_start(form)}}

		<div class="row">
			<div class="col-md-4">{{ form_row(form.libelle)}}</div>
			<div class="col-md-4">{{ form_row(form.type)}}</div>
			<div class="col-md-3">{{ form_row(form.montant) }} </div>
		</div>

		<div class="row">
			<div class="col-md-5">{{ form_row(form.local)}}</div>
			<div class="col-md-6">{{ form_row(form.categorie)}}</div>
		</div>

		<div class="row">

			<div class="col-md-2">{{ form_row (form.date) }}</div>
			<div class="col-md-1">{{ form_row(form.pointage )}}</div>
		</div>

		<button class="btn btn-primary">Valider</button>
	</div>
	{{form_end(form)}}
</div>{% endblock %}
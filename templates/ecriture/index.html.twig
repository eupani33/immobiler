{% extends 'base.html.twig' %}

{% block title "Ecritures" %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<table id="datatable" data-toggle="table" data-search="true" class="table table-striped table-bordered" data-pagination="true">
					<thead>
						<tr align="center">
							<th data-field="date" data-sortable="true">Date</th>
							<th data-field="type" data-sortable="true">Type</th>
							<th data-field="libelle" data-sortable="true">Libelle</th>
							<th data-field="montant" data-sortable="true">Montant</th>
							<th data-checkbox="true">Pointage</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>

						{% for ecriture in ecritures %}
							<tr>
								<td>{{ ecriture.date ? ecriture.date|date('d/m/Y') : '' }}</td>
								<td>{{ ecriture.type }}</td>
								<td>{{ ecriture.libelle }}</td>
								<td>{{ ecriture.montant|number_format }}
									â‚¬</td>
								<td>{{ ecriture.pointage }}</td>

								<td>
									<a href="{{ path('ecriture_edit', {'id': ecriture.id}) }}"><img src="{{ asset('icons/edits.png') }}" alt="Edition!"/></a>
								</td>
							</tr>
						{% endfor %}


					</tbody>
				</tbody>
			</table>
		</div>
	</div>
	<a href="{{ path('ecriture_new') }}"><img src="{{ asset('icons/add.png') }}"/></a>
{% endblock %}
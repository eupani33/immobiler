{% extends 'base.html.twig' %}

{% block title %}Ecriture
{% endblock %}

{% block body %}

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ ecriture.id }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ ecriture.date ? ecriture.date|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ ecriture.type }}</td>
			</tr>
			<tr>
				<th>Libelle</th>
				<td>{{ ecriture.libelle }}</td>
			</tr>
			<tr>
				<th>Montant</th>
				<td>{{ ecriture.montant }}</td>
			</tr>
			<tr>
				<th data-checkbox="true">Pointage</th>
				<td>{{ ecriture.pointage ? 'Yes' : 'No'}}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('ecriture_index') }}">back to list</a>

	<a href="{{ path('ecriture_edit', {'id': ecriture.id}) }}">edit</a>


<table style="border-collapse: collapse; margin-left: auto; margin-right: auto" border="1" paddingcellspacing="1" cellpadding="20" width="90%">

	<head>
		<th>Bien</th>
		<th>Période</th>
		<th>Provision charges</th>
		<th>Loyer</th>
		<th>Montant Encaissé</th>
	</head>

            
	<tbody>
		<tr style="border: thin solid" align="center">
			<td> {{ loyer.local.adresse }} <br/>{{ loyer.local.cp }}  {{ loyer.local.ville }}</td>
			<td>{{loyer.nom}}</td>
			<td>{{loyer.charge}}
				€</td>
			<td>{{loyer.montantTot}}
				€
			</td>
			<td>{{ loyer.paiement }}
				€</td>
		</tr>
	</tbody>
	{% if (loyer.montantTot != loyer.paiement) %}

		<tfoot style="text-align: right">
			<tr>
				<th colspan=5>
					solde {{ loyer.paiement - loyer.montant }} €
				</th>
			</tr>
		</tfoot>
	{% endif %}

</table>



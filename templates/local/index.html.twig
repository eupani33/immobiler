{% extends 'base.html.twig' %}
{% block title "Locaux"%}
{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<table id="datatable" data-toggle="table" data-search="true" class="table table-striped table-bordered" data-pagination="true">
					<thead>
						<th data-field="nom" data-sortable="true">Nom</th>
						<th data-field="ville" data-sortable="true">Ville</th>
						<th>actions</th>
					</thead>

					<tbody>
						{% for local in locals %}
							<tr>
								<td>{{ local.nom }}</td>
								<td>{{ local.surface }}</td>
								<td>
									<a href="{{ path('local_edit', {'id': local.id}) }}">edit</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<a href="{{ path('local_new') }}">Nouvel enregistrement</a>
{% endblock %}
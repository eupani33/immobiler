{% extends 'base.html.twig' %}

{% block title "Locataire" %}

{% block body %}
	<div class="container mt-5">

		{{form_start(form)}}

		<div class="row">
			<div class="col-md-4">{{ form_row(form.civilite)}}</div>
			<div class="col-md-4">{{ form_row(form.nom)}}</div>
			<div class="col-md-3">{{ form_row(form.prenom)}}</div>
		</div>
		<div class="row">
			<div class="col-md-5">{{ form_row(form.adresse)}}</div>
			<div class="col-md-6">{{ form_row(form.cp)}}</div>
			<div class="col-md-6">{{ form_row(form.ville)}}</div>
		</div>
		<div class="row">
			<div class="col-md-2">{{ form_row(form.date_naissance)}}</div>
			<div class="col-md-5">{{ form_row(form.lieux_naissance)}}</div>
		</div>
		<div class="row">
			<div class="col-md-5">{{ form_row(form.email)}}</div>
			<div class="col-md-5">{{ form_row(form.tel)}}</div>
		</div>
		<div class="row">
			<div class="col-md-0">{{ form_row(form.actif)}}</div>
		</div>


		<button class="btn btn-primary">Valider</button>
		{{form_end(form)}}
	</div>
{% endblock %}
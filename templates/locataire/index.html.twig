{% extends 'base.html.twig' %}
{% block title "locataires"%}
{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<table id="datatable" data-toggle="table" data-search="true" class="table table-striped table-bordered" data-pagination="true">
					<thead>
						<th data-field="civil" data-sortable="true">Civil.</th>
						<th data-field="nom" data-sortable="true">Nom</th>
						<th data-field="prenom" data-sortable="true">Prénom</th>
						<th data-field="adresse" data-sortable="true">Adresse</th>
						<th data-field="cp" data-sortable="true">Code Postal</th>
						<th data-field="ville" data-sortable="true">Ville</th>
						<th data-field="naissance" data-sortable="true">Naissance</th>
						<th data-field="lieux" data-sortable="true">Lieux</th>
						<th data-field="tel" data-sortable="true">Télèphone</th>
						<th data-field="email" data-sortable="true">Email</th>
						<th>actions</th>
					</thead>

					<tbody>
						{% for locataire in locataires %}
							<tr>
								<td>{{ locataire.civilite }}</td>
								<td>{{ locataire.nom }}</td>
								<td>{{ locataire.prenom }}</td>
								<td>{{ locataire.adresse }}</td>
								<td>{{ locataire.ville }}</td>
								<td>{{ locataire.cp }}</td>
								<td>{{ locataire.dateNaissance ? locataire.dateNaissance|date('d-m-Y') : ''}}</td>
								<td>{{ locataire.lieuxNaissance }}</td>
								<td>{{ locataire.tel }}</td>
								<td>{{ locataire.email }}</td>
								<td>
									<a href="{{ path('locataire_edit', {'id': locataire.id}) }}">edit</a>
								</td>

							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<a href="{{ path('locataire_new') }}">Nouvel enregistrement</a>
{% endblock %}
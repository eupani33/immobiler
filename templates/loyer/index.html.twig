{% extends 'base.html.twig' %}

{% block title %}Loyer index
{% endblock %}

{% block body %}
	<h1>Loyer index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Local/Locataire</th>
				<th>Description</th>
				<th>Loyer total</th>
				<th>Loyer</th>
				<th>Charges</th>
				<th>Periode_du</th>
				<th>Periode_au</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for loyer in loyers %}
				<tr>
					<td>{{ loyer.chargesInfo }}</td>
					<td>{{ loyer.nom }}</td>
					<td>{{ loyer.montantTot }}</td>
					<td>{{ loyer.loyer }}</td>
					<td>{{ loyer.charge }}</td>
					<td>{{ loyer.periodeDu ? loyer.periodeDu|date('d-m-Y') : '' }}</td>
					<td>{{ loyer.periodeAu ? loyer.periodeAu|date('d-m-Y') : '' }}</td>
					<td>
						<a href="{{ path('loyer_show', {'id': loyer.id}) }}">show</a>
						<a href="{{ path('loyer_edit', {'id': loyer.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="14">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('loyer_new') }}">Create new</a>
{% endblock %}
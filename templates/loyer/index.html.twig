{% extends 'base.html.twig' %}

{% block title "IndexLoyer" %}

{% block body %}

	<div class="container mt-5">
		<div class="row">
			<div class="col">
				<table id="datatable" data-toggle="table" data-search="true" class="table table-striped table-bordered" data-pagination="true">
					<thead>
						<tr>
							<th data-field="locataire" data-sortable="true" data-align="center">Locataire</th>
							<th data-field="nom" data-align="center">Nom</th>
							<th data-field="loyer" data-align="center">Loyer</th>
							<th data-field="du" data-align="center">du</th>
							<th data-field="au" data-align="center">au</th>
							<th data-field="action" data-align="center">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for loyer in loyers %}
							<tr>
								<td>{{ loyer.locataireinfo }}</td>
								<td>{{ loyer.nom }}</td>
								<td>{{ loyer.montantTot }}</td>
								<td>{{ loyer.periodeDu ? loyer.periodeDu|date('d-m-Y') : '' }}</td>
								<td>{{ loyer.periodeAu ? loyer.periodeAu|date('d-m-Y') : '' }}</td>
								<td>
									<a href="{{ path('loyer_edit', {'id': loyer.id}) }}"><img src="{{ asset('icons/edits.png') }}" alt="Edition!"/></a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<a href="{{ path('contrat_new') }}"><img src="{{ asset('icons/add.png') }}"/></a>
		</div>
	</div>
{% endblock %}